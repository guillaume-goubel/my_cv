{% extends 'base.html.twig' %}

{% block title %}Guillaume GOUBEL{% endblock %}

{% block stylesheets %}
	{{ parent() }}
	{{ encore_entry_link_tags('home') }}
{% endblock %}

{% block javascripts %}
	{{ parent() }}
	{{ encore_entry_script_tags('home') }}
{% endblock %}

{% block body %}

	<!-- Navigation-->
	{% include "partials/nav.html.twig" %}

	<!-- Page Content-->
	<div class="container p-0">
		
		<!-- Project Abstract-->
		<section class="resume-section hidden" id ="project-abstract-container">
			
			<div class="resume-section-content">
				
				<a href="{{ path('app_login') }}" id="login-access"><button class="btn btn-sm btn-outline-success">Accès Bo</button></a>
				
				<p>
					{{ 'abstract'|trans|raw }}
				</p>
				
				<strong><i class="fa-solid fa-gears"></i>{{ 'technologies utilisées pour ce site'|trans|raw }}</strong>
				
				<code>
					<ul class="mt-3">
						<li class="list-unstyled"><strong>Back-end</strong></li>
						<li>Symfony 6</li>
						<li>Php 8</li>
					</ul>
					<ul>
						<li class="list-unstyled"><strong>Front-end</strong></li>
						<li>Javascrip Vanilla</li>
						<li>Bootstrap 5</li>
						<li>Webpack Encore</li>
					</ul>
				</code>

				<hr>
			</div>
		</section>

		<!-- About-->
		<section class="resume-section" id="about">
			
			<div class="resume-section-content">
				<h1 class="mb-0">
					Guillaume
					<span class="text-secondary main-title">GOUBEL</span>					
				</h1>
				<div class="subheading mb-5">
					59510 Hem, France
					<a class="text-secondary" href="mailto:guillaume.goubel.pro@gmail.com">guillaume.goubel.pro@gmail.com</a>
				</div>
				
				<p class="lead mb-5">
					{% include "home/components/about/about_" ~ app.request.getLocale() ~ ".html.twig" %}
				<p>

			</div>
		</section>
		<hr class="m-0" />

		<!-- Experience-->
		<section class="resume-section" id="experience">
			<div class="resume-section-content">
				{% include "home/components/experience/experience_" ~ app.request.getLocale() ~ ".html.twig" %}
			</div>
		</section>
		<hr class="m-0" />

		<!-- Education-->
		<section class="resume-section" id="education">
			<div class="resume-section-content">
				{% include "home/components/education/education_" ~ app.request.getLocale() ~ ".html.twig" %}
			</div>
		</section>
		<hr class="m-0" />

		<!-- Skills-->
		<section class="resume-section" id="skills">
			<div class="resume-section-content">
				{% include "home/components/skills/skills_" ~ app.request.getLocale() ~ ".html.twig" %}
			</div>
		</section>
		<hr class="m-0" />

		<!-- Projects-->
		<section class="resume-section" id="awards">
			<div class="resume-section-content">
				{% include "home/components/project/project_" ~ app.request.getLocale() ~ ".html.twig" with {'projects': projects} %}
			</div>
		</section>
		<hr class="m-0" />



		<!-- Interests-->
		<section class="resume-section" id="interests">
			<div class="resume-section-content">
				{# <h2 class="mb-5">Interests</h2> #}

				<div id="grid" class="grid-container">

					<div id="image1" class="griditem image1">
					</div>

					<div id="image2" class="griditem image2">
					</div>
					<div id="image3" class="griditem image3">

					</div>
					<div id="image4" class="griditem image4">
					</div>
					<div id="image5" class="griditem image5">
					</div>

					<div id="image6" class="griditem image6">

					</div>
					<div id="image7" class="griditem image7">

					</div>
					<div id="image8" class="griditem image8">
					</div>

				</div>		
			</div>
		</section>
		
	</div>

	{# project modale #}
	<div class="modal fade" id="projectModal" tabindex="-1" aria-labelledby="projectModalLabel" aria-hidden="true">
		<div class="modal-dialog">
			<div class="modal-content">
				<div class="modal-header">
					<h5 class="modal-title" id="projectModalLabel">Modal title</h5>
					<button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
				</div>
				<div class="modal-body">
					...
				</div>
				<div class="modal-footer">
					<button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
					<button type="button" class="btn btn-primary">Save changes</button>
				</div>
			</div>
		</div>
	</div>

{% endblock %}
