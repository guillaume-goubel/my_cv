{% extends 'base.html.twig' %}

{% block title %}Guillaume GOUBEL{% endblock %}

{% block stylesheets %}
	{{ parent() }}
	{{ encore_entry_link_tags('home') }}
{% endblock %}

{% block javascripts %}
	{{ parent() }}
	{{ encore_entry_script_tags('home') }}
{% endblock %}

{% block body %}
	    
	<!-- Navigation-->
	{% include "partials/nav.html.twig" %}

	<!-- Page Content-->
	<div class="container p-0">
		
		<!-- Project Abstract-->
		<section class="resume-section hidden" id ="project-abstract-container">
			
			<div class="resume-section-content">
				
				<a href="{{ path('app_login') }}" id="login-access"><button class="btn btn-sm btn-outline-success">Accès Bo</button></a>
				
				<p>
					{{ 'abstract'|trans|raw }}
				</p>
				
				<strong><i class="fa-solid fa-gears"></i>{{ 'technologies utilisées pour ce site'|trans|raw }}</strong>
				
				<code>
					<ul class="mt-3">
						<li class="list-unstyled"><strong>Back-end</strong></li>
						<li>Symfony 6</li>
						<li>Php 8</li>
					</ul>
					<ul>
						<li class="list-unstyled"><strong>Front-end</strong></li>
						<li>Javascrip Vanilla</li>
						<li>Bootstrap 5</li>
						<li>Webpack Encore</li>
					</ul>
				</code>

				<hr>
			</div>
		</section>

		<!-- About-->
		<section class="resume-section" id="about">
			
			<div class="resume-section-content">
				<h1 class="mb-0">
					Guillaume
					<span class="text-secondary main-title">GOUBEL</span>					
				</h1>
				<div class="subheading mb-5">
					59510 Hem, France
					<a class="text-secondary" href="mailto:guillaume.goubel.pro@gmail.com">guillaume.goubel.pro@gmail.com</a>
				</div>
				
				<p class="lead mb-5">
					{% include "home/components/about/about_" ~ app.request.getLocale() ~ ".html.twig" %}
				<p>

			</div>
		</section>
		<hr class="m-0" />

		<!-- Experience-->
		<section class="resume-section" id="experience">
			<div class="resume-section-content">
				{% include "home/components/experience/experience_" ~ app.request.getLocale() ~ ".html.twig" %}
			</div>
		</section>
		<hr class="m-0" />

		<!-- Education-->
		<section class="resume-section" id="education">
			<div class="resume-section-content">
				{% include "home/components/education/education_" ~ app.request.getLocale() ~ ".html.twig" %}
			</div>
		</section>
		<hr class="m-0" />

		<!-- Skills-->
		<section class="resume-section" id="skills">
			<div class="resume-section-content">
				{% include "home/components/skills/skills_" ~ app.request.getLocale() ~ ".html.twig" %}
			</div>
		</section>
		<hr class="m-0" />

		<!-- Interests-->
		<section class="resume-section" id="interests">
			<div class="resume-section-content">
				<h2 class="mb-5">Interests</h2>
				<p>Apart from being a web developer, I enjoy most of my time being outdoors. In the winter, I am an avid skier and novice ice climber. During the warmer months here in Colorado, I enjoy mountain biking, free climbing, and kayaking.</p>
				<p class="mb-0">When forced indoors, I follow a number of sci-fi and fantasy genre movies and television shows, I am an aspiring chef, and I spend a large amount of my free time exploring the latest technology advancements in the front-end web development world.</p>
			</div>
		</section>
		<hr class="m-0" />

		<!-- Projects-->
		<section class="resume-section" id="awards">
			<div class="resume-section-content">
				{% include "home/components/project/project_" ~ app.request.getLocale() ~ ".html.twig" %}
			</div>
		</section>

	</div>

{% endblock %}
