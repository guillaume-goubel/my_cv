{% extends 'base.html.twig' %}

{% block title %}Connexion BO{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    {{ encore_entry_link_tags('login') }}
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('login') }}
{% endblock %}

{% block body %}

<div class="container" id="login-form-container">

    <div class="row align-items-center justify-content-center">

        <div class="col-12 col-sm-12 col-md-8 col-lg-6 col-xl-6">

            <form method="post">
                {% if error %}
                    <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                {% endif %}

                {% if app.user %}
                    <div class="mb-3">
                        Vous êtes loggé en tant que {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Déconnexion</a>
                    </div>
                {% endif %}

                <h1 class="h3 mb-3 font-weight-normal">Connexion</h1>
                <label for="inputEmail">Email</label>
                <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" autocomplete="email" required autofocus>
                <label class="mt-3" for="inputPassword">Mot de passe</label>
                <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>

                <input type="hidden" name="_csrf_token"
                    value="{{ csrf_token('authenticate') }}"
                >

                <button class="btn btn-sm btn-outline-success mt-3" type="submit">
                    Connexion
                </button>

                <a href="{{path('app_home')}}">
                    <button class="btn btn-sm btn-outline-danger mt-3" type="button">
                        Retour
                    </button>
                </a>

            </form>

        </div>

    </div>

</div>
{% endblock %}
